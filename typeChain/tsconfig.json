//이 파일이 있어야 vs code가 ts로 작업한다는 것을 앎
{
    "include": [
        "src"
        //ts가 src의 모든 파일을 확인하도록 설정
    ],
    "compilerOptions": {
        "outDir" : "build",
        //outDirectory : js파일이 생성될 디렉터리를 지정.
        //ts를 js로 컴파일 후 build  폴더에 저장
        "target": "es6",
        //target : 컴파일 할 js의 버전 설정.
        "lib":["ES6", "DOM"],
        //js 코드가 어디에서 동작할지를 알려줌.
        //타입스크립트에게 어떤 API를 사용하고 어떤 환경에서 코드를 실행하는 지를 지정할 수 있습니다.
        //lib을 설정하면 자동완성 기능 사용 가능
        //DOM : 브라우저, document, window
        "strict":true,
        //모든 엄격한 타입 검사 옵션을 활성화합니다.
        //strict 플래그는 프로그램 정확성을 더 강력하게 보장하는 광범위한 타입 검사 동작을 가능하게 합니다.
        "allowJs":true,
        //ts안에 js허용
    }
}
